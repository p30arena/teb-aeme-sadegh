        {
          "paragraphId": 714167706,
          "paragNumber": 6,
          "tocNumber": 0,
          "text": "<p id=\"3452\"><format class=\"hadith\" who=\"6\" Id=\"447\" RevayatIndex=\"447\">قلت: بلى.</format></p>"
